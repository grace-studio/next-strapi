{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "target": "ES2021",
    "module": "ES6",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationDir": "./lib/types",
    "removeComments": true,
    "outDir": "./lib",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
